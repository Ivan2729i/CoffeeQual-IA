{
  "scripts": {
    "tw": "npx @tailwindcss/cli -i ./static/src/input.css -o ./static/dist/output.css --watch",
    "tw:build": "npx @tailwindcss/cli -i ./static/src/input.css -o ./static/dist/output.css --minify",
    "dj": "python manage.py runserver",
    "dev": "concurrently \"npm run tw\" \"npm run dj\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
